@{
    ViewData["Title"] = "Movie List";
}
@model List<Movie>

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.cateogry</td>
                    <td>@movie.Title</td>
                    <td>@movie.Year</td>
                    <td>@movie.Director</td>
                    <td>@movie.Rating</td>
                </tr>
            }
    </tbody>
</table>
